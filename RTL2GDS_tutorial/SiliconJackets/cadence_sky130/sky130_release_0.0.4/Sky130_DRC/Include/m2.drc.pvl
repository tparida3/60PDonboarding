rule m2.1 {
    caption "Width of metal2 >= 0.140 um"
    inte met2 -lt 0.140
}

rule m2.2 {
    caption "Spacing of metal2 to metal2 >= 0.140 um"
    exte met2 -lt 0.140 -single_point
}

//rule m2.3a {
//    caption "Min. spacing of features attached to or extending from huge_met2"
